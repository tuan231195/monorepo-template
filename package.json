{
	"name": "@vdtn359/monorepo-template",
	"private": true,
	"description": "Test monorepo new",
	"workspaces": [
		"packages/*",
		"components/*",
		"frontends/*"
	],
	"scripts": {
		"postinstall": "[ \"$NODE_ENV\" = production ] && exit 0; husky install",
		"monorepolint:check": "mrl check",
		"monorepolint:fix": "mrl check --fix",
		"local:docker": "docker build -t vdtn359/monorepo-template-base . --progress plain && docker compose up --remove-orphans",
		"clean:all": "turbo run clean",
		"lint:all": "turbo run lint",
		"build:all": "turbo run build",
		"tsc:all": "turbo run tsc",
		"test:all": "turbo run test",
		"package:all": "turbo run package",
		"release:all": "turbo run release --concurrency 1",
		"patch:all": "turbo run patch --concurrency 1",
		"plan-release:all": "turbo run plan-release --concurrency 1",
		"start:all": "turbo run start --parallel",
		"start:single": "turbo run start --filter",
		"watch:all": "turbo run watch"
	},
	"devDependencies": {
		"@monorepolint/cli": "^0.4.0",
		"@release-it/conventional-changelog": "^5.0.0",
		"@vdtn359/release-it-deps-plugin": "^1.0.3",
		"@swc-node/register": "^1.5.1",
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.224",
		"@swc/jest": "^0.2.22",
		"@types/jest": "^28.1.6",
		"@vdtn359/base-typescript": "^1.0.1",
		"@vdtn359/eslint-config": "^1.1.1",
		"@vdtn359/jest-config": "^1.0.0",
		"@vdtn359/prettier-config": "^1.0.0",
		"chokidar": "^3.5.3",
		"commitizen": "^4.2.5",
		"cz-customizable": "^6.9.1",
		"eslint": "^8.21.0",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "^13.0.3",
		"lodash.merge": "^4.6.2",
		"monorepolint": "^0.4.0",
		"node-dev": "^7.4.3",
		"pnpm-isolate-workspace": "^0.0.9",
		"prettier": "^2.7.1",
		"release-it": "^15.3.0",
		"shelljs": "^0.8.5",
		"turbo": "^1.4.3",
		"typescript": "^4.7.4"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	}
}
