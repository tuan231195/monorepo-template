{
  "name": "@vdtn359/odd-server",
  "version": "0.3.1",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "build": "swc --config-file ../../.swcrc ./src -d dist",
    "start": "node-dev src/index.ts",
    "start:prod": "node dist/index",
    "test": "jest --passWithNoTests",
    "tsc": "tsc",
    "clean": "rm -rf dist",
    "package": "npm run prepare-workspace && npm run docker",
    "prepare-workspace": "pnpm-isolate-workspace . --src-less-disable --src-less-prod-disable --workspaces-exclude-glob=src --src-files-exclude-glob=src --src-files-enable",
    "docker": "docker build -t ${npm_package_config_docker}:${npm_package_version} . && docker tag ${npm_package_config_docker}:${npm_package_version} ${npm_package_config_docker}:latest",
    "release": "release-it --ci",
    "plan-release": "release-it --ci --dry-run"
  },
  "dependencies": {
    "@vdtn359/is-odd": "workspace:*",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13"
  },
  "config": {
    "docker": "vdtn359/odd-server"
  },
  "types": "src/index.ts"
}
